extend layout
block content
  div(class="row")
    div(class="col-sm-10 col-sm-offset-1 text-center")
      form(method="POST" action="/person/add" class="form-inline")
        div(class="form-group space-right")
          label Name
          input(class="form-control" name="name" placeholder="Robert Downey Jr.")
        div(class="form-group space-right")
          label Website URL
          input(class="form-control" name="website_url" placeholder="https://www.imdb.com/name/nm0000375/")
        div(class="form-group space-right")
          label Donations URL
          input(class="form-control" name="donations_url" placeholder="https://www.imdb.com/name/nm0000375/")
        button(class="btn btn-warning" type="submit") Add
  hr
  div(class="row")
    div(class="col-sm-10 col-sm-offset-1")
      ul(class="list-group")
        for person in people
          li
            a(href=("/person/"+person.id)) #{person.name}
  script.
    window.people = !{JSON.stringify(people).replace(/<\//g, "<\\/")}
